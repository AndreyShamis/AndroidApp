<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnCpuInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:minHeight="@dimen/activity_horizontal_margin"
        android:minWidth="@dimen/activity_horizontal_margin"
        android:text="CPU Info"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnCpuInfo"
        android:scrollHorizontally="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/btnShowProcessList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_toRightOf="@+id/btnCpuInfo"
        android:minHeight="@dimen/activity_horizontal_margin"
        android:minWidth="@dimen/activity_horizontal_margin"
        android:text="Process List"
        android:textSize="8sp" />

    <Button
        android:id="@+id/P2PConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_toRightOf="@+id/btnShowProcessList"
        android:minHeight="@dimen/activity_horizontal_margin"
        android:minWidth="@dimen/activity_horizontal_margin"
        android:text="P2P Connect"
        android:textSize="8sp" />

    <Button
        android:id="@+id/P2PDiscover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_toRightOf="@+id/P2PConnect"
        android:minHeight="@dimen/activity_horizontal_margin"
        android:minWidth="@dimen/activity_horizontal_margin"
        android:text="P2P Discover"
        android:textSize="8sp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/P2PDiscover"
        android:minHeight="@dimen/activity_horizontal_margin"
        android:minWidth="@dimen/activity_horizontal_margin"
        android:text="Clear"
        android:textSize="8sp" />

    <Switch
        android:id="@+id/goIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnClear"
        android:layout_toLeftOf="@+id/btnClear"
        android:text="GO" />

</RelativeLayout>